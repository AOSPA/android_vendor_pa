cc_binary {
    name: "themed_bootanimation",

    srcs: [
        "themed_bootanimation.cpp",
    ],

    cpp_std: "experimental",

    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
    ],

    shared_libs: [
        "libbase",
    ],

    static_libs: [
        "libbootloader_message",
        "libfstab",
    ],
    init_rc: ["themed_bootanimation.rc"],
}